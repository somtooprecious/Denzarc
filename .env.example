# Clerk (authentication)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Optional: Clerk sign-in/sign-up URLs (defaults: /sign-in, /sign-up)
# CLERK_SIGN_IN_URL=/sign-in
# CLERK_SIGN_UP_URL=/sign-up
# CLERK_AFTER_SIGN_IN_URL=/dashboard
# CLERK_AFTER_SIGN_UP_URL=/dashboard

# Supabase (database; auth is handled by Clerk)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Paystack (payments)
# Use same secret key as in Postman. Callback URL sent is: ${NEXT_PUBLIC_APP_URL}/api/payments/verify
PAYSTACK_SECRET_KEY=sk_live_xxx
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_live_xxx
PRO_PLAN_AMOUNT=2999
PRO_PLAN_CURRENCY=NGN

# Support email (mailto from support page)
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com

# SMTP email provider (for automated email notifications)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=notifications@yourdomain.com
ADMIN_NOTIFICATION_EMAIL=admin@yourdomain.com

# Termii (SMS â€“ subscription reminders, low-stock alerts, admin SMS)
# Get API key and Sender ID from https://termii.com dashboard
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=YourSenderId

# OpenAI (AI insights)
OPENAI_API_KEY=sk-xxx

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SMARTSUPP_KEY=your-smartsupp-key
CRON_SECRET=replace-with-strong-random-secret

# Admin (Clerk)
ADMIN_CLERK_USER_ID=user_xxx

# Admin (Client-only UI toggle)
NEXT_PUBLIC_ADMIN_CLERK_USER_ID=user_xxx
